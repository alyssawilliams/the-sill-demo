// FONTS
@font-face {
  font-family: 'Domaine-Regular';
  src: url('Domaine-Regular.woff2') format('woff2'),
       url('Domaine-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Domaine-Medium';
  src: url('Domaine-Medium.woff2') format('woff2'),
       url('Domaine-Medium.woff') format('woff');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

body, select, .btn {
  font-family: Domaine-Regular, helvetica, sans-serif;
} 

h1, h2 {
  font-family: Domaine-Medium, helvetica, sans-serif;
}


// COLORS
$sill-black: #2d2a24;

body, a, p {
  color: $sill-black;
}