// COLORS
$sill-black: #2d2a24;
$sill-grey: #6c6965;
$sill-grey-light: #bfb8af;
$sill-block-background: #f3f3f2;
$sill-green: #00ab84;

// SIZES
$tablet-up: 768px;


// PRODUCT GRID
@media screen and (min-width: $tablet-up) {
  .product-single {
    display: flex;
    justify-content: center;
  }
}

@media screen and (min-width: $tablet-up) {
  .grid__item {
    padding-left: 50px;
  }
}


// PRODUCT INFO
.product-single__title {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 2.5em;
}

.product-form__controls-group {
  flex-direction: column;
}

.price {
  display: inline-flex;
  font-size: .65em;
}

.price-item {
  color: $sill-black;
  font-weight: 400;
  line-height: 1.4em;
}

.product-single__description {
  margin-bottom: 0;
}

.product-form__item {
  margin-bottom: 30px;
  margin-left: 0;
  margin-right: 0;
}

.product-form__item label {
  text-transform: uppercase;
  color: $sill-grey;
  font-size: .75em;
  font-weight: 600;
  letter-spacing: 1px;
}

.product-form select {
  border-color: $sill-grey-light;
}

.size-guide {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  cursor: default;

  label {
    cursor: pointer;
    color: $sill-green;
    text-transform: none;
    font-size: .8em;
  }
}

.btn {
  text-transform: none;
}

.shipping-info {
  font-size: .7em;
}

@media screen and (min-width: $tablet-up) {
  .product-single__media-group {
    position: relative;
    height: 0%;

    &:before {
      content: 'Itâ€™s okay to be basic.';
      position: absolute;
      top: 50%;
      bottom: 50%;
      left: -20%;
      transform: rotate(90deg);
    }
  }
}


// THE STITCH MILL BLOCK
.the-stitch-mill-container {
  background-color: $sill-block-background;
  background-image: url('vendor-leaf-blue.png'),
                    url('vendor-leaf-green.png');
  background-repeat: no-repeat;
  background-size: 220px, 340px;
  background-position: left 8% top 25%, right 5% bottom;
  display: flex;
  justify-content: center;
  padding: 80px;

  .header {
    text-transform: none;
    font-size: 1.4em;
    letter-spacing: -0.1px;
  }

  .inner {
    padding: 70px 60px;
    width: 810px;
    background-color: #fff;
  }

  .blurb:not(:last-of-type) {
    margin-bottom: 20px;
  }
}


// FAQ BLOCK
.faq-container {
  display: flex;
  justify-content: space-between;
  padding: 55px;

  .header {
    font-size: 2.5em;
    text-transform: none;
    letter-spacing: 0.5px;
  }

  .question-and-answer {
    cursor: pointer;
  }
  
  .question-and-answer:not(:last-of-type) {
    border-bottom: 1px solid $sill-grey-light;
  }

  .question {
    font-size: 1em;
    padding-top: 25px;
    margin-bottom: 25px;
    position: relative;
  }

  .answer {
    padding-bottom: 25px;
    display: none;
  }

  .read-more {
    &, &:hover {
      color: $sill-green;
    }

    font-weight: 600;
    display: block;
    margin-top: 40px;
  }
}

// Toggle
.question-and-answer {  
  .question:after {
    content: '-';
    position: absolute;
    top: 16px;
    right: 0;
    font-size: 1.5em;
  }

  &.open .question:after {
    content: '+';
    font-size: 1.2em;
    top: 20px;
  }
}