// COLORS
$sill-black: #2d2a24;
$sill-grey: #6c6965;
$sill-grey-light: #bfb8af;

// PRODUCT GRID
.product-single {
  display: flex;
  justify-content: center;
}

.grid__item {
  padding-left: 50px;
}

// PRODUCT INFO
.product-single__title {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 2.5em;
}

.product-form__controls-group {
  flex-direction: column;
}

.price {
  display: inline-flex;
  font-size: .65em;
}

.price-item {
  color: $sill-black;
  font-weight: 400;
  line-height: 1.4em;
}

.product-single__description {
  margin-bottom: 0;
}

.product-form__item {
  margin-bottom: 20px;
  margin-left: 0;
  margin-right: 0;
}

.product-form__item label {
  text-transform: uppercase;
  color: $sill-grey;
  font-size: .75em;
  font-weight: 600;
  letter-spacing: 1px;
}

.product-form select {
  border-color: $sill-grey-light;
}

.btn {
  text-transform: none;
}

.shipping-info {
  font-size: .7em;
}

