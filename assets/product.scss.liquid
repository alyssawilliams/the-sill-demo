// COLORS
$sill-black: #2d2a24;


// PRODUCT GRID
.product-single {
  display: flex;
  justify-content: center;
}

.grid__item {
  padding-left: 50px;
}

// PRODUCT INFO
.product-single__title {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 2.5em;
}

.price {
  display: inline-flex;
  font-size: .65em;
}

.price-item {
  color: $sill-black;
  font-weight: 400;
  line-height: 1.4em;
}